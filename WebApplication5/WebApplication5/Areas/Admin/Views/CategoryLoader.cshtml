@model IEnumerable<WebApplication5.Models.adminCategory>

@foreach (var item in Model.Where(x => x.parentId == null))
{
    <li class="nav-item">
        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#@item.name" aria-expanded="true" aria-controls="collapseTwo">
            <i class="fas fa-fw fa-cog"></i>
            <span>@item.name</span>
        </a>
        <div id="@item.name" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
            <div class="bg-white py-2 collapse-inner rounded">
                <h6 class="collapse-header">Custom Components:</h6>
                @foreach (var item2 in Model.Where(x => x.parentId != null))
                {
                    if (item2.parentId == item.id)
                    {
                        <a class="collapse-item" href="buttons.html">@item2.name</a>
                    }
                }
            </div>
        </div>
    </li>
}

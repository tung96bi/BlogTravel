@model IEnumerable<WebApplication5.Models.Duser>

@{
    ViewBag.Title = "ManageUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var db = new WebApplication5.Models.BlogEntities();
}
<h2 class="alert alert-danger text-center">Manage User</h2>

<p>
    @Html.ActionLink("Create New", "CreateUser", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-responsive-md table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th>
                Post Count
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Where(x => x.role == (int)WebApplication5.Commom.Role.Type.Editor))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nickname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.username)
                </td>
                <td>
                    @db.posts.Count(x => x.userId.Equals(item.id))
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isActive)
                </td>
                <td width="10%">
                    <a href="@Url.Action("EditUser","User", new { id = item.id })"><i class="far fa-edit fa-2x"></i></a> |
                    <a href="#" class="removeUser" data-id="@item.id"><i class="far fa-trash-alt fa-2x"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

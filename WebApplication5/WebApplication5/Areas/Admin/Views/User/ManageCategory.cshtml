@model IEnumerable<WebApplication5.Models.Category>

@{
    ViewBag.Title = "ManageCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="alert alert-danger text-center">Manage Category</h2>

<p>
    @Html.ActionLink("Create New", "CreateCate", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-responsive-md table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.displayName)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.displayName)
                </td>
                <td width="10%">
                    <a href="@Url.Action("EditCat","User", new { id = item.id })"><i class="far fa-edit fa-2x"></i></a> |
                    <a href="#" class="removeUser" data-id="@item.id"><i class="far fa-trash-alt fa-2x"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>

@model IEnumerable<WebApplication5.Models.Category>
@{
    var db = new WebApplication5.Models.BlogEntities();
}

<div class="sidebar-box pt-md-4">
    <img src="~/Asset/images/image_11.jpg" style="border-radius: 50%" width="40%" />
    @if (Session["User"] != null)
    {
        <a href="@Url.Action("Logout","Blog")">Log out</a>
    }
    else
    {
        <a href="@Url.Action("SignIn","Blog")">Sign In</a>
        <a href="@Url.Action("SignUp","Blog")">Sign Up</a>
    }
</div>

<div class="sidebar-box pt-md-4">
    <form action="#" class="search-form">
        <div class="form-group">
            <span class="icon icon-search"></span>
            <input type="text" class="form-control" placeholder="Type a keyword and hit enter">
        </div>
    </form>
</div>
<div class="sidebar-box ftco-animate">
    <h3 class="sidebar-heading">Categories</h3>
    <ul class="categories">
        @foreach (var item in Model)
        {
            <li><a href="#">@item.CatName<span>@db.posts.Count(x=>x.categoryId.Equals(item.id)).ToString()</span></a></li>
        }
    </ul>
</div>

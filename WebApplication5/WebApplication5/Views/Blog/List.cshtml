@model IEnumerable<WebApplication5.Models.post>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}
@*<div class="col-xl-8 px-md-5 py-5">
    <div class="row pt-md-4">*@
        @foreach (var item in Model)
        {
            <div class="col-md-12">
                <div class="blog-entry-2 ftco-animate">
                    <a href="@Url.Action("Detail","Blog",new { id = item.id})" class="img" style="background-image: url(@item.image);"></a>
                    <div class="text pt-4">
                        <h3 class="mb-4"><a href="@Url.Action("Detail","Blog",new { id = item.id})">@item.title</a></h3>
                        <p class="mb-4">@item.content</p>
                        <div class="author mb-4 d-flex align-items-center">
                            <a href="#" class="img" style="background-image: url(../../Asset/images/person_1.jpg);"></a>
                            <div class="ml-3 info">
                                <span>Written by</span>
                                <h3><a href="#">Dave Lewis</a>, <span>@item.createOn</span></h3>
                            </div>
                        </div>
                        <div class="meta-wrap d-md-flex align-items-center">
                            <div class="half order-md-last text-md-right">
                                <p class="meta">
                                    <span><i class="icon-heart"></i>3</span>
                                    <span><i class="icon-eye"></i>100</span>
                                    <span><i class="icon-comment"></i>5</span>
                                </p>
                            </div>
                            <div class="half">
                                <p><a href="@Url.Action("Detail","Blog",new { id = item.id})" class="btn btn-primary p-3 px-xl-4 py-xl-3">Continue Reading</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    @*</div>
</div>*@


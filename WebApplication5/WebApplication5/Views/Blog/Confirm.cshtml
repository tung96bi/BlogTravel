@{
    var user = (WebApplication5.Models.Duser)TempData["User"];
}
@using (Html.BeginForm("Confirm", "Blog", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="alert alert-danger text-center">Please check your email to complete registration</div>
    </div>
    if(ViewBag.ActiveError != null)
    {
        <div class="text-danger">
            @ViewBag.ActiveError
        </div>
    }
    <div class="form-group">
        <label>Please enter your active code here!</label>
        <input type="text" name="id" value="@user.id" id="activeID" hidden />
        <input type="text" name="activeCode" class="form-control" maxlength="6" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>
}
<div class="form-group">
    <div>
        If you don't recive email, Click here to resend
        <button class="btn btn-success" id="resend">Resend</button>
    </div>
</div>

